<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Products</title>

  <style>
    body { font-family: Arial, sans-serif; padding: 24px; }
    h2 { margin: 0 0 12px; }
    a { color: #0d6efd; text-decoration: none; }

    .btn {
      display: inline-block;
      padding: 6px 10px;
      border: 1px solid #0d6efd;
      border-radius: 4px;
      margin-bottom: 12px;
    }

    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: center; }
    th { background: #f3f3f3; }

    .id { font-size: 12px; color: #666; word-break: break-all; }
    .inline { display: inline; }
    .delete-btn {
      background: none; border: none; color: #dc3545; cursor: pointer;
    }
  </style>
</head>

<body>
  <h2>Product List</h2>

  <a href="/products/add" class="btn"> Add product</a>

  <table>
    <thead>
      <tr>
        <th>ID</th><th>Name</th><th>Price</th><th>Qty</th><th>Image</th><th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% products.forEach(p => { %>
        <tr>
          <td class="id"><%= p.id %></td>
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td><%= p.quantity %></td>

          <td>
  <% if (p.url_image) { %>
    <img src="<%= p.url_image %>" width="60">
  <% } else { %>
    No image
  <% } %>
</td>

          <td>
            <a href="/products/edit/<%= p.id %>">Edit</a>
            |
            <form action="/products/delete/<%= p.id %>?_method=DELETE" method="POST" class="inline">
              <button type="submit" class="delete-btn"
                onclick="return confirm('Delete this product?')">
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
